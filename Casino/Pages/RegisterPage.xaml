<Page x:Class="Casino.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Casino.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="RegisterPage" Background="AliceBlue">

    <Grid>
        <Image HorizontalAlignment="Left" Height="254" Margin="450,10,0,0" VerticalAlignment="Top" Width="400" Source="/Pages/Casic.png"/>
        <TextBox x:Name="TxtLogin" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" Height="30" BorderBrush="#FF6D6D6D" Margin="0,350,0,0"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="485,324,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="485,385,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="TxtPassword" HorizontalAlignment="Center" Margin="0,411,0,0" VerticalAlignment="Top" Width="310" Height="30"/>
        <Button x:Name="RegisterBtn" Content="Sign Up" HorizontalAlignment="Center" Margin="0,516,0,0" VerticalAlignment="Top" Width="150" Height="30" Click="RegisterBtn_Click"/>
        <ComboBox x:Name="RoleSel" HorizontalAlignment="Center" Margin="0,472,0,0" VerticalAlignment="Top" Width="310" Height="26" Initialized="RoleSel_Initialized"/>
        <Label Content="Role" HorizontalAlignment="Left" Margin="486,446,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
